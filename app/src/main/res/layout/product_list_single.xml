<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="#e2791d"
                        android:gravity="right"
                        android:padding="3dp"

                        android:text="10%off"
                        android:textColor="#fff"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:id="@+id/off_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="#e2791d"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10%off"


                        android:textColor="#fff"
                        />
                </LinearLayout>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a"
               />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView

                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:maxLines="2"
                        android:text="BossSolardfssfdsf"
                        android:textColor="#000000"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/img_wish"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:padding="3dp"
                        android:src="@drawable/whishlist"
                        />
                    <ImageView
                        android:id="@+id/img_shooping"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:padding="3dp"
                        android:src="@drawable/shoppinlist"
                        />
                    <ImageView
                        android:id="@+id/img_offer"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/offer_new"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/product_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"

                        android:text="(B306)"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/txt_pack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Pack.of :"
                            />
                        <TextView
                            android:id="@+id/product_packof"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="1" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_prices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/txt_mrp_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_weight="1"
                            android:text="MRP"/>
                        <TextView
                            android:id="@+id/product_mrp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="\u20B9745.00"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/txt_selling"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="SP (Incl. GST)" />
                        <TextView
                            android:id="@+id/product_sellingprice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="\u20B9745.00"
                            android:textColor="@color/green" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="DEALER PRICE"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/p_del_prize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="\u20B9630.00"
                            android:textColor="#06A54B" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/BTN_wheretobuy_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#01035a"
                        android:text="where to buy"
                        android:textColor="#ffffff" />
                    <Button
                        android:id="@+id/btn_buyonline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="#e2791d"
                        android:text="Buy Now"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/btn_enquiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="#e2791d"
                        android:text="Ask Quote"
                        android:textColor="#ffffff"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#000000"/>



</LinearLayout>

