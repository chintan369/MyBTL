                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:text="\u20B9"
                            android:gravity="center"
                            />
                    <TextView
                        android:id="@+id/tv_product_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:gravity="center"

                        android:textColor="@color/red"
                        android:textSize="14sp" />
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELLING PRICE:"
                        android:textColor="#000"
                        android:id="@+id/txt_sell"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/l_sellrs"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="#06A54B"
                            android:textSize="14sp"
                            android:text="\u20B9"
                            android:gravity="center"
                            />
                    <TextView
                        android:id="@+id/tv_product_selling_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:gravity="center"

                        android:textColor="#06A54B"
                        android:textSize="14sp" />
                        </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_optionname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <Spinner
                android:id="@+id/sp_option"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/spinner_border"
                ></Spinner>

            <TextView
                android:id="@+id/high_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"

                android:text="HIGHLIGHTS"
                android:textColor="#000"
                android:textSize="14sp"
                android:visibility="gone" />


            <!-- <include layout="@layout/details"/>-->


            <LinearLayout
