<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center|center_vertical"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Boss Solar"
                    android:id="@+id/product_name" />

            </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:gravity="center"

                android:text="(B306)"
                android:id="@+id/product_code" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"

                android:padding="5dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pack.of "
                        android:textSize="14sp"
                        android:gravity="center|center"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="14sp"
                        android:gravity="center|center"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:id="@+id/product_packof" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:id="@+id/txt_mrp_text"
                        android:gravity="center|center"
                        android:textColor="#000000"
                        android:text="MRP"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:orientation="horizontal"
                        android:id="@+id/l_mrp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:text="\u20B9"
                            android:gravity="right|center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:text="745.00"
                            android:gravity="center|center"
                            android:id="@+id/product_mrp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:gravity="center|center"
                        android:textColor="#000000"
                        android:text="Selling Price"
                        android:id="@+id/txt_selling_price"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:id="@+id/l_sell"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/green"
                            android:textSize="14sp"
                            android:text="\u20B9"
                            android:gravity="right|center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:textColor="@color/green"
                            android:text="735.00"
                            android:gravity="center|center"
                            android:textSize="14sp"
                            android:id="@+id/product_sellingprice" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="DEALER PRICE"/>
                    <TextView
                        android:textColor="#06A54B"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="\u20B9630.00"
                        android:id="@+id/p_del_prize1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l_view_spinner"

                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/black_underline"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/minus"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:id="@+id/minus" />
                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/background_gradiant"

                    android:id="@+id/edt_count" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/plus"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/plus" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"


                        android:id="@+id/txt_total_txt"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:orientation="horizontal"
                        android:id="@+id/l_total"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="#000"
                            android:textSize="14sp"
                            android:text=" \u20B9"
                            android:gravity="right|center|end"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="630.00"
                            android:gravity="right|end|center"
                            android:id="@+id/txt_total"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:id="@+id/txt_availableScheme"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"

                    android:id="@+id/cancel"
                    android:textSize="14sp"
                    android:background="#9e9e9e"
                    android:text="Cancel"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:id="@+id/Btn_Buy_online11"
                    android:background="#e2791d"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp"
                    android:text="ADD TO CART"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

