            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Product Rate"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <EditText

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_productrate"
                android:inputType="number"
                android:visibility="gone"
                android:textSize="14sp"

                android:layout_weight="1"
                android:background="@drawable/border_slider"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Purchase Date"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:background="@drawable/border_slider"
                    android:hint="Select Purchase Date"/>
                <Button
                    android:id="@+id/btn_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark"
                    android:text="Date"
                    android:textColor="#ffffff"/>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Guarantee"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <EditText

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_guarantee"
                android:inputType="text"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Cash Memo No."
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <EditText

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_cashmemono"
                android:inputType="number"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Your Query"
                android:drawableRight="@drawable/star"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <EditText

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_product_enquiry_comment"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:lines="4"
                android:textSize="14sp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icc_coomm"
                android:background="@drawable/border_slider"
                />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_Cust_com_sub"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Submit"
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
