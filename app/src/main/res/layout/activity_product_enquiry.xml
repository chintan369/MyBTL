<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.agraeta.user.Boss.Customer_Complains">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Product Enquiry"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@drawable/black_underline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
              android:id="@+id/login_layout"
android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Login First"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
android:gravity="center"
                    />
                <Button
                    android:id="@+id/btn_Login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:text="Login"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:id="@+id/without_login"
                >

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:drawableRight="@drawable/star"

                android:text="First Name "/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/etfirst_name_Cust_com"
                android:layout_weight="1"
                android:textSize="14sp"
                android:inputType="textPersonName"

                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_parson"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"

                android:text="Middle Name "/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etmiddle_name"
                android:layout_weight="1"
                android:visibility="gone"

                android:hint="Enter Middle Name"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/person"/>
            <TextView

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:textSize="16sp"
                android:text="Last Name "/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/etlast_name_Cust_com"
                android:inputType="textPersonName"
                android:layout_weight="1"
                android:textSize="14sp"

                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_parson"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="Email"
                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_email"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:id="@+id/Et_Emailid"
                android:background="@drawable/border_slider"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mobile No."
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/etmobile"
                android:inputType="number"
                android:textSize="14sp"

                android:maxLength="14"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                android:drawableLeft="@drawable/ic_flag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="State"
                android:drawableRight="@drawable/star"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:id="@+id/spn_select_state"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:spinnerMode="dialog" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="City"
                android:drawableRight="@drawable/star"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:id="@+id/spn_select_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:spinnerMode="dialog" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Prodct Name"
                android:drawableRight="@drawable/star"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:id="@+id/product_spinner"
                android:layout_width="match_parent"
                android:background="@drawable/spinner_border"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_height="40dp" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:padding="5dp"
                android:background="@drawable/border_slider"
                android:ems="10" />



