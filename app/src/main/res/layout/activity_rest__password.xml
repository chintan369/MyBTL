<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agraeta.user.btl.Forgot_password">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"

        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/btl_logo"/>
        <EditText
            android:id="@+id/et_reset_newpassword"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:drawableLeft="@mipmap/ic_key"
            android:background="@drawable/border_slider"
            android:textColor="#99000000"

android:inputType="textPassword"


            android:hint="New Password" />

        <EditText
            android:id="@+id/et_reset_confirm_newpassword"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_key"
            android:background="@drawable/border_slider"
            android:textColor="#99000000"
            android:hint="Confirm New Password"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_reset_forgotpassword"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="16sp"

                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Reset"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
