<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.agraeta.user.btl.SkipOrderUnregisterUserActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Un-Registered User"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/strip_bg" />

    <ScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_firmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Firm Name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_firmName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_addrLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Address Line 1"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_addrLine1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_addrLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Address Line 2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_addrLine2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_addrLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Address Line 3"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_addrLine3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Country"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spn_country"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="State"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spn_state"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="City"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spn_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Area"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spn_area"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Pin Code"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_pincode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="number"
                android:maxLength="6"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_contactPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Contact Person Name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_contactPerson"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_emailID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Email"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_emailID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Mobile No"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="number"
                android:maxLength="10"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_partyReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Party Report / Market Ref."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_partyReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="5dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_addVisitingFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/strip_bg"
                android:text="Visiting Card (Front Side)"
                android:textColor="@color/white"
                android:textSize="14sp" />
            
            <FrameLayout
                android:id="@+id/layout_visitngFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_visitingFront"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/img_removeVisitingFront"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:src="@drawable/com_facebook_close"/>

                <TextView
                    android:id="@+id/txt_visitingFrontPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </FrameLayout>

            <Button
                android:id="@+id/btn_addVisitingBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/strip_bg"
                android:text="Visiting Card (Back Side)"
                android:textColor="@color/white" />

            <FrameLayout
                android:id="@+id/layout_visitngBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_visitingBack"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/img_removeVisitingBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:src="@drawable/com_facebook_close"/>

                <TextView
                    android:id="@+id/txt_visitingBackPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/txt_dealingBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Dealing In Brand"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_dealingBrand"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_customerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Type of Customer"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spn_customerType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Comment"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_jointVisitWith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Joint Visit With"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_jointVisitWith"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_gradiant"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layout_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

            </LinearLayout>


            <TextView
                android:id="@+id/txt_add_attachment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add Attachment"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
