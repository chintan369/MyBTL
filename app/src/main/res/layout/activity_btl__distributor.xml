<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.agraeta.user.Boss.Distributer"
    tools:showIn="@layout/activity_distributer">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"

                android:text="Distributer Details"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:background="@drawable/black_underline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:layout_marginTop="5dp"
                android:text="Company/Shop Name"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Comp_name"


                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Date Of Birth"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_dob"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_DateofBirth"
                android:visibility="gone"

                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="PAN Card"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_id"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_pan_no1"
                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Tin No. VAT"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_id"
                android:textSize="14sp"
                android:drawablePadding="10dp"

                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Tin No. CST"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_id"
                android:textSize="14sp"
                android:drawablePadding="10dp"

                android:background="@drawable/border_slider"/>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Aadhaar Card Number(UID)"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_id"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_addhar_no1"
                android:visibility="gone"

                android:background="@drawable/border_slider"/>
-->
            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_marginTop="5dp"

                 android:background="@drawable/black_underline"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"

                android:text="Permanent Address"
                />
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:background="@drawable/black_underline"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Alternate Tel No."
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_mobile"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:hint=""
                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Alternate Email Id"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_email"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:hint=""
                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Address Line1"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Addressline_no1"
                android:hint="Flat No , Building No"
                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"


                android:layout_marginTop="5dp"
                android:text="Address Line 2"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_place"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Addressline_no2"
                android:hint=" Street No , Locality"
                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Landmark"

                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"

                android:id="@+id/Et_Addressline_no3"
                android:hint=" Landmark , Area"
                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Pin Code"
                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_place"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Pincode"

                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="City"

                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_city"

                android:background="@drawable/border_slider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="State"

                android:textSize="16sp"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_glob"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_State"

                android:background="@drawable/border_slider"/>


            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Same as above"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/checkBox" />
            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:layout_marginTop="5dp"

                 android:background="@drawable/black_underline"/>
  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="Delivery Address"
                />
            <!--      <View
                      android:layout_width="match_parent"
                      android:layout_height="2dp"
                      android:background="@drawable/black_underline"/>
               -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:text="Address Line1"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:visibility="gone"
                android:drawablePadding="10dp"

                android:id="@+id/Et_Deliv_Addressline_no1"
                android:hint="Flat No , Building No"

                android:background="@drawable/border_slider"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Address Line 2"
                android:textSize="16sp"/>
            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_place"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Deliv_Addressline_no2"
                android:hint=" Street No , Locality"
                android:background="@drawable/border_slider"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="Landmark"

                android:textSize="16sp"/>
            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Deliv_Addressline_no3"
                android:hint=" Landmark , Area"
                android:background="@drawable/border_slider"/>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginTop="5dp"
                android:text="Pin Code"
                android:textSize="16sp"/>
            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_place"
                android:textSize="14sp"
                android:drawablePadding="10dp"

                android:id="@+id/Et_Deliv_Pincode"

                android:background="@drawable/border_slider"/>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="State"

                android:textSize="16sp"/>
            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_glob"
                android:textSize="14sp"
                android:drawablePadding="10dp"

                android:id="@+id/Et_Deliv_State"

                android:background="@drawable/border_slider"/>


            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:text="City"

                android:textSize="16sp"/>
            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_building"
                android:textSize="14sp"
                android:drawablePadding="10dp"
                android:id="@+id/Et_Deliv_city"
                android:hint=" Enter City Name"
                android:background="@drawable/border_slider"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_save_dist"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <Button
                    android:id="@+id/btn_Reset_dist"
                    android:layout_marginTop="10dp"
                    android:background="#808080"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:text="Reset"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
