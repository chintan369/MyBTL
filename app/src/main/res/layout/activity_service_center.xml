<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"


            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Display Center / Dealers"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:text="State"
                android:textSize="16sp" />
            <Spinner
                android:id="@+id/spnstate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:spinnerMode="dialog" />



            <TextView
                android:id="@+id/tvslectcity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:text="City"
                android:textSize="16sp"
                android:visibility="gone" />
            <Spinner
                android:id="@+id/spncity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_border"
                android:padding="5dp"
                android:spinnerMode="dialog"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tvpincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Pin Code"

                android:textSize="16sp"
                android:visibility="gone" />
            <EditText

                android:id="@+id/et_pincode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_place"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:text="Search"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_filter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:visibility="gone" />

            <ListView
                android:id="@+id/layout_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                >

            </ListView>

           <!-- <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/mapImg"
                android:visibility="gone"
                android:src="@drawable/map_img"
                android:layout_height="match_parent" />-->
        </LinearLayout>
</ScrollView>
</LinearLayout>

