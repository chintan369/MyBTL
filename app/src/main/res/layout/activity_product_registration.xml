<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"

                android:text="Product Registration"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@drawable/black_underline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/login_layout"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Login First"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/btn_Login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:text="Login"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/without_login"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:drawableRight="@drawable/star"
                android:text="First Name "
                android:id="@+id/tvfname" />
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_product_registration_fname"
                android:layout_weight="1"
                android:textSize="14sp"
                android:inputType="textPersonName"

                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_parson"/>
            <TextView


                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"

                android:text="Middle Name "/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etmiddle_name"
                android:layout_weight="1"
                android:visibility="gone"

                android:hint="Enter Middle Name"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/person"/>
            <TextView

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Last Name "
                android:drawableRight="@drawable/star"
                android:id="@+id/tvlname" />
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_product_registration_lname"
                android:inputType="textPersonName"
                android:layout_weight="1"
                android:textSize="14sp"

                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_parson"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="Email"
                android:textSize="14sp"
                android:id="@+id/tvemail" />
            <EditText

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/ic_email"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:id="@+id/et_product_registration_email"
                android:background="@drawable/border_slider"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mobile No."
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:id="@+id/et_product_registration_mobile"
                android:inputType="number"
                android:textSize="14sp"

android:maxLength="14"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                android:drawableLeft="@drawable/ic_flag"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Purchase State"
                android:drawableRight="@drawable/star"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
                android:id="@+id/tvstate" />
            <Spinner

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/spn_pro_reg_state"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_weight="1"
                android:spinnerMode="dialog"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_glob"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Purchase City"
                android:textSize="14sp"
                android:drawableRight="@drawable/star"
                android:layout_marginTop="5dp"
                android:id="@+id/tvcity" />
            <Spinner

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/spn_pro_reg_city"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_weight="1"
                android:spinnerMode="dialog"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_glob"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Dealer Name"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
            <EditText

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_product_registration_retailername"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_weight="1"
                android:background="@drawable/border_slider" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:id="@+id/tvproname"
                android:text="Prodct Name"

                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <AutoCompleteTextView
            android:id="@+id/autocomplete_productname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
                android:padding="5dp"
            android:background="@drawable/border_slider"
            android:ems="10" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="Product Rate"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginTop="5dp"/>
            <EditText

                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_product_registration_product_rate"
                android:inputType="text"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_weight="1"

                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_building"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:textSize="16sp"
            android:drawableRight="@drawable/star"

                android:text="Product Purchase Date"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:background="@drawable/border_slider"
                    android:hint="Select Purchase Date"/>
                <Button
                    android:id="@+id/btn_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark"
                    android:text="Date"
                    android:textColor="#ffffff"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="Upload Invoice Copy"
                android:textSize="16sp"

                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:id="@+id/txt_photo"
                    android:background="@drawable/border_slider"
                    android:hint="Select Invoice"/>
                <Button
                    android:id="@+id/btn_upload_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark"
                    android:text="Browse.."
                    android:textColor="#ffffff"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_submit_product_registration"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Submit"
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
