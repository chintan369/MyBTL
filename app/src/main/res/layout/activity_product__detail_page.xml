<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.agraeta.user.btl.Product_DetailPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="#E9E9E9"
          android:gravity="center"
android:layout_gravity="center"
android:orientation="horizontal"
          android:layout_margin="2dp"
        >

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:layout_weight="1"
android:layout_gravity="center|end"
              android:padding="5dp"
              android:src="@drawable/ic_action_content_sort"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="#E9E9E9"
              android:gravity="left|center"
              android:padding="5dp"
              android:layout_margin="2dp"
              android:text="Sort"
              android:textSize="18sp"
              android:textColor="@color/colorAccent"
              android:id="@+id/tv_sort" />

      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E9E9E9"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center|right"

                android:padding="5dp"
                android:src="@drawable/ic_action_content_filter_list"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E9E9E9"

            android:gravity="left|center"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:text="Filter"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/tv_filter" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

<ListView
    android:layout_width="match_parent"
    android:layout_weight="2"
    android:padding="10dp"
    android:scrollbars="none"
    android:background="#FFFFFF"
    android:id="@+id/lst_prodct_grid_img"
    android:layout_height="match_parent"></ListView>
    <ImageView
        android:layout_weight="1"
        android:id="@+id/img_Prodct"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:src="@drawable/door"
        android:layout_height="match_parent" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"></View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Door Handle -Gloden"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Rs.350 | Item in Stock"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Brand: Smart shopper"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
 android:layout_weight="1"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_addtocart_productdetail"
            android:background="#FCF0E4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:text="ADD TO CART"
            />

        <Button

        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_buynow_productdetail"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:text="BUY NOW"
        />

    </LinearLayout>
</LinearLayout>
