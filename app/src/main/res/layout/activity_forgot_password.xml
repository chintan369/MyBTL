<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agraeta.user.btl.Forgot_password">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"

    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:textColor="#000000"

        android:text="FORGOT PASSWORD"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="#99000000"
        android:text="Email Id"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etreset_mobile_number"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:background="@drawable/border_slider"
        android:textColor="#99000000"
android:singleLine="true"
        android:drawableLeft="@mipmap/ic_user"
        android:hint="Enter Email Id"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_resetpassword"
        android:layout_marginTop="50dp"
        android:background="#F58634"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:text="Reset Password"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txt_forget"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Please check your mail for reset password."/>
</LinearLayout>


</LinearLayout>
