<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"

        >
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="Boss Solartytrytrytrytrytrytrytrytry"
            android:textColor="#000000"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/img_shooping"
            android:layout_width="50dp"
            android:layout_height="30dp"

            android:padding="3dp"
            android:src="@drawable/btl_remove"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/off_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="2dp"
                    android:background="#e2791d"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="10%off"
                    android:textColor="#fff"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/a"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/product_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:gravity="left"

                        android:text="(B306)"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Pack.of :"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:id="@+id/product_packof"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="1 Box"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Per Unit Price :" />
                        <TextView
                            android:id="@+id/p_prize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text=" \u20B9630.00" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/l_lmrp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"

                        android:orientation="vertical"

                        >
                        <TextView
                            android:id="@+id/txt_mrp_main"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:text="MRP"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/l_m"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" \u20B9"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                />
                        <TextView
                            android:id="@+id/product_mrp"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:text="745.00"
                            android:textColor="@color/red"
                            android:textSize="14sp" />
                            </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_lselling"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="SP (Incl. GST)"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:gravity="center"
                                android:text=" \u20B9"
                                android:textColor="@color/green"
                                android:textSize="14sp"
                                />
                        <TextView
                            android:id="@+id/product_sellingprice"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:text="745.00"
                            android:textColor="@color/green"
                            android:textSize="14sp" />
                            </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="DEALER PRICE"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/p_del_prize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="\u20B9630.00"
                            android:textColor="#06A54B"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>




                <TextView
                    android:id="@+id/tv_option_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Color: White, Power: 110"
                    android:textColor="#000"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_Scheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"

                    android:text="Scheme"
                    android:textColor="@color/red"
                    android:textSize="10sp" />



            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >


    <LinearLayout
        android:id="@+id/l_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal"

        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/minus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:background="#fff"
            android:padding="2dp"
            android:src="@drawable/minusicon"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:text=" \u20B9"
            android:textColor="#000"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/a_product_sellingprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:singleLine="true"
            android:text="745.00"
            android:textColor="#000"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/multiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:gravity="center"
            android:text="X"
            android:textColor="#000"
            android:textSize="16sp"
            />
       <TextView

           android:id="@+id/cart_edit"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_marginLeft="10dp"
           android:background="@drawable/cart_editborder"
           android:digits="0123456789"
           android:focusable="true"
           android:gravity="center"
           android:inputType="number"
           android:maxLength="5"
           android:padding="1dp"
           android:singleLine="true"
           android:text="1"
           android:textColor="#000"
           android:textSize="14sp"
           />
        <!--android:background="@drawable/border_slider"-->
        <ImageView
            android:id="@+id/plus"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:padding="2dp"
            android:src="@drawable/plusicon"
            android:visibility="gone" />

<LinearLayout
    android:id="@+id/l_ltotal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#fff"
    android:orientation="horizontal"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"

            android:text="Total:"

            android:textColor="#000000"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text=" \u20B9"

            android:textColor="#000000"
            android:textSize="14sp"
            />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp" />
</LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#000000"/>


</LinearLayout>

