<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_order_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/order_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="Boss Solar"
                        android:textColor="#000000"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="Order ID:"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:textColor="#000000"

                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Per Unit Price :"/>

                        <TextView
                            android:id="@+id/p_prize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text=" \u20B9630.00"/>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Color: White, Power: 110"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView

                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"


                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="#000000"


                    android:textSize="14sp"/>


                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="630.00"
                    android:textColor="#000000"

                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="2"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/im_details"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:padding="4dp"
                    android:src="@drawable/details11"
                    />


                <ImageView
                    android:id="@+id/im_pdfdownload"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:padding="4dp"
                    android:src="@drawable/pdf"
                    />

                <ImageView
                    android:id="@+id/im_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:padding="4dp"
                    android:src="@drawable/invoice11"
                    android:visibility="visible"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/layout_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_orderID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black_000"
                android:textSize="12sp"
                tools:text="#ID"/>

            <TextView
                android:id="@+id/txt_orderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black_000"
                android:textSize="12sp"
                tools:text="Date"/>

            <TextView
                android:id="@+id/txt_orderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black_000"
                android:textSize="12sp"
                tools:text="Status"/>

            <TextView
                android:id="@+id/txt_orderAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black_000"
                android:textSize="12sp"
                tools:text="Amount"/>

            <ImageView
                android:id="@+id/img_options"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/option"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

