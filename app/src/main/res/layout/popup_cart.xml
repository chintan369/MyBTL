<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        >

                        <TextView

                            android:id="@+id/product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center|center_vertical"
                            android:maxLines="2"
                            android:text="Boss Solar"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                    <TextView

                        android:id="@+id/product_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="(B306)"

                        android:textColor="#000000"
                        android:textSize="14sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_offerDialog"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/offer_new"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:text="Pack.of "
                        android:textColor="#000000"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/product_packof"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txt_mrp_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:text="MRP"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:id="@+id/l_mrp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="right|center"
                            android:text="\u20B9"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/product_mrp"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:gravity="center|center"
                            android:text="745.00"
                            android:textColor="@color/red"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txt_selling_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:text="Selling Price"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        />

                    <LinearLayout
                        android:id="@+id/l_sell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="right|center"
                            android:text="\u20B9"
                            android:textColor="@color/green"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/product_sellingprice"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent"
                            android:gravity="center|center"
                            android:text="735.00"
                            android:textColor="@color/green"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="DEALER PRICE"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/p_del_prize1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="\u20B9630.00"
                        android:textColor="#06A54B"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_view_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/black_underline"/>

                <LinearLayout
                    android:id="@+id/l_spinnertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black_underline"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:src="@drawable/minus"/>

                <EditText
                    android:id="@+id/edt_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_gradiant"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="1"

                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:src="@drawable/plus"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/txt_total_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total:"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:id="@+id/l_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|center|end"
                            android:text=" \u20B9"
                            android:textColor="#000"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/txt_total"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|end|center"
                            android:text="630.00"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:id="@+id/txt_availableScheme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                >
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"

                    android:background="#9e9e9e"
                    android:text="Cancel"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/Btn_Buy_online11"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#e2791d"
                    android:text="ADD TO CART"
                    android:textColor="#fff"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
