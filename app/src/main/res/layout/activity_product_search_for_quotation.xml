<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.agraeta.user.btl.ProductSearchForQuotationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#0048bc"
            android:background="@drawable/black_underline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search Product"
            android:textSize="14sp"
            android:inputType="textAutoComplete"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColorHint="#0048bc"
            android:id="@+id/Search_Actv" />

        <ImageView
            android:layout_weight="5"
            android:padding="10dp"
            android:id="@+id/image_search_pro"
            android:src="@drawable/search"
            android:layout_width="match_parent"
            android:background="@drawable/black_underline"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/List_search" />

</LinearLayout>
