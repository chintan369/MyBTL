<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agraeta.user.btl.Forgot_password">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/black_underline" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="Change Password"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/black_underline" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"

        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
<TextView
    android:gravity="left|center"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="Old Password"/>
        <EditText
            android:id="@+id/et_reset_newpassword"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:drawableLeft="@mipmap/ic_key"
            android:background="@drawable/border_slider"
            android:textColor="#99000000"

            android:inputType="textPassword"


            android:hint="Enter Old Password" />
        <TextView
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="New Password"/>
        <EditText
            android:id="@+id/et_reset_confirm_newpassword"

            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_key"
            android:background="@drawable/border_slider"
            android:textColor="#99000000"
            android:hint="Enter New Password"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Confirm Password"/>
        <EditText
            android:id="@+id/et_change_confirm_newpassword"

            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_key"
            android:background="@drawable/border_slider"
            android:textColor="#99000000"
            android:hint="Enter Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_reset"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="16sp"

                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="Save"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
