<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/careers_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"

            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Careers"
                android:textSize="20sp"

                android:textStyle="bold"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@drawable/black_underline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="First Name "

                android:textSize="16sp" />
            <EditText
                android:id="@+id/etfirst_name_careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_parson"

                android:inputType="textPersonName"
                android:textSize="14sp" />
            <TextView


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Middle Name "
                android:textSize="16sp"

                android:visibility="gone" />
            <EditText
                android:id="@+id/etmiddle_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_slider"

                android:drawableLeft="@mipmap/person"
                android:hint="Enter Middle Name"
                android:visibility="gone" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="Last Name "
                android:textSize="16sp" />
            <EditText
                android:id="@+id/etlast_name_careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_parson"

                android:inputType="textPersonName"
                android:textSize="14sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
android:drawableRight="@drawable/star"
                android:text="Email"
                android:textSize="16sp"/>
            <EditText

                android:id="@+id/et_email_careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_slider"
                android:drawableLeft="@mipmap/ic_email"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Mobile No."
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_mobile_careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_slider"


                android:drawableLeft="@drawable/ic_flag"
                android:inputType="number"
                android:maxLength="14"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="State"
                android:textSize="16sp" />
            <Spinner

                android:id="@+id/spn_state_Careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@mipmap/ic_glob"
                android:inputType="text"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="City"
                android:textSize="16sp" />
            <Spinner

                android:id="@+id/spn_city_careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_border"
                android:drawableLeft="@mipmap/ic_glob"
                android:inputType="text"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="Job Function"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/et_functional_area_careers"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_slider"
                android:editable="false"
                android:paddingLeft="10dp"
                android:textSize="14sp"

                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/star"
                android:text="Upload Resume"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_filename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_slider"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="Upload Your Resume"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/btnfilechoose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark"
                    android:text="Browse.."
                    android:textColor="#ffffff"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_submit_careers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/btn_Reset_careers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#808080"
                    android:padding="5dp"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
